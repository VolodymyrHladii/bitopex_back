    "format:write": "prettier --write .",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "build": "tsc --outDir dist/src && cp -r package* ecosystem* tsconfig* prisma* dist/ && cp src/launch.webp dist/src/launch.webp",
    "build:prod": "dotenv -e .env.production tsc",
    "build:local": "dotenv -e .env tsc",
    "dev": "nodemon --watch \"src/**\" --ext \"ts,json\" --exec \"ts-node ./src/app.ts\"",
    "start": "dotenv -e .env -- prisma db push && node src/app.js",
    "prisma:generate": "prisma generate",
    "db:push:local": "dotenv -e .env -- prisma db push",
    "db:push:prod": "dotenv -e .env.prod -- prisma db push",
    "prepare": "husky"
